generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model Category {
  id    Int      @id @default(autoincrement())
  name  String
  foods Food[]
}

model Food {
  id         Int       @id @default(autoincrement())
  name       String
  price      Int
  image      String?
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  createdAt  DateTime  @default(now())
}